<import src="../common/header.wxml" />
<import src="../common/footer.wxml" />

<view class="container">
  <template is="header" data="{{title: 'total/modal/'}}"/>

  <view class="page-body">
    <view class="page-body-wrapper">
      <view class="page-body-buttons">
        <button class="page-body-button" type="primary" bindtap="showToast">showToast</button>
        <button class="page-body-button" type="primary" bindtap="showModal">showModal</button>
        <button class="page-body-button" type="primary" bindtap="showActionSheet">showActionSheet</button>
      </view>
    </view>
  </view>
  <template is="footer" />
</view>
