<view class="page">
  <view class="page__hd">
    <view class="page__title">picker-view</view>
    <view class="page__desc">嵌入页面的滚动选择器</view>
  </view>
  <view class="page__bd">
    <view>
      <view>{{year}}年{{month}}月{{day}}日</view>
      <picker-view
        indicator-style="height: 50px;"
        style="width: 100%; height: 300px;"
        value="{{value}}"
        bindchange="bindChange"
      >
        <picker-view-column>
          <view wx:for="{{years}}" wx:key="{{item+index}}" style="line-height:50px">{{item}}年</view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{months}}" wx:key="{{item+index}}" style="line-height: 50px">
            {{item}}月
          </view>
        </picker-view-column>
        <picker-view-column>
          <view wx:for="{{days}}" wx:key="{item+index}" style="line-height: 50px">{{item}}日</view>
        </picker-view-column>
      </picker-view>
    </view>
  </view>
</view>