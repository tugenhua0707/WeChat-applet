<view class="page">
  <view class="page__hd">
    <view class="page__title">button</view>
    <view class="page__desc">button按钮</view>
  </view>
  <view class="page__bd">
    <button 
      type="default" 
      size="{{defaultSize}}" 
      loading="{{loading}}"
      plain="{{plain}}"
      disabled="{{disabled}}"
      bindtap="default"
      hover-class="other-button-hover" 
    >default</button>
    <button
      type="primary"
      size="{{primarySize}}"
      loading="{{loading}}"
      plain="{{plain}}"
      disabled="{{disabled}}"
      bindtap="primary"
    >primary</button>
    <button
      type="warn"
      size="{{warnSize}}"
      loading="{{loading}}"
      plain="{{plain}}"
      disabled="{{disabled}}"
      bindtap="warn"
    >warn</button>
    <button bindtap="setDisabled">点击设置disabled属性</button>
    <button bindtap="setPlain">点击设置plain属性</button>
    <button bindtap="setLoading">点击设置loading属性</button>
  </view>
</view>